{% extends 'base.html.twig' %}

{% block body %}
    <div class="container vh-100 d-flex justify-content-center align-items-center  py-3">
        <div class="p-2">
            {{ form_start(form) }}
            <div class="mb-3">
                <label for="name" class="form-label fw-bold">Title <span class="text-danger fw-bold">*</span></label>
                <input type="text" class="form-control" id="name" name="{{ field_name(form.title) }}">
            </div>
            <div class="mb-3">
                <textarea name="{{ field_name(form.content) }}" id="summernote"></textarea>
            </div>
            <div class="mb-3">
                {{ form_row(form.category) }}
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary" name="{{ field_name(form.submit) }}">Ask</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}


