{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-info flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <div class="card mt-3">
        <div class="card-body">
            <div class="container d-flex justify-content-center align-items-center  py-3">
                <div class="p-2">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        <label for="name" class="form-label fw-bold">Заглавие на въпроса <span class="text-danger fw-bold">*</span></label>
                        <input type="text" class="form-control" id="name" name="{{ field_name(form.title) }}">
                    </div>
                    <div class="mb-2">
                        <textarea name="{{ field_name(form.content) }}" id="summernote"></textarea>
                    </div>
                    <div class="mb-4">
                        {{ form_row(form.category) }}
                    </div>
                    <div class="">
                        <button type="submit" class="btn btn-primary" name="{{ field_name(form.submit) }}">Задай</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


