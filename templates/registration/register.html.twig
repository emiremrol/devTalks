{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}




    <div class="container vh-100 d-flex justify-content-center align-items-center  py-3">
        <div class="border w-50 p-2">
            <h3 class="mb-3">Create your account</h3>
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {{ form_start(form) }}
            <div class="mb-3">
                <label for="name" class="form-label fw-bold">Name <span class="text-danger fw-bold">*</span></label>
                <input type="text" class="form-control" id="name" name="{{ field_name(form.name) }}">
            </div>
            <div class="mb-3">
                <label for="username" class="form-label fw-bold">Username <span class="text-danger fw-bold">*</span></label>
                <input type="text" class="form-control" id="username" name="{{ field_name(form.username) }}">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label fw-bold">Email <span class="text-danger fw-bold">*</span></label>
                <input type="email" class="form-control" id="email" name="{{ field_name(form.email) }}">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label fw-bold">Password <span class="text-danger">*</span></label>
                <input type="password" class="form-control" name="{{ field_name(form.password.first) }}">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label fw-bold">Confirm Password <span
                            class="text-danger">*</span></label>
                <input type="password" class="form-control" name="{{ field_name(form.password.second) }}">
                <span class="text-danger">{{ form_errors(form.password.first) }}</span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Sign up</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
